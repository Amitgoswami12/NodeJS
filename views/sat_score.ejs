
<script>function updateCardOptions() {
    const whichBank = document.getElementById("whichBank");
    const cardId = document.getElementById("cardId");
  
    // Clear existing options
    cardId.innerHTML = "";
  
    // Define card options based on the selected bank
    const bankValue = whichBank.value;
    const cardOptions = {
      1: ["Axis Bank My Zone", "Axis Bank Magnus", "Axis Bank Reserve","Axis Bank Altas","Axis Bank Neo","Axis Bank Vistara Signature","Flipkart Axis Bank"],
      2: ["SBI SimpliSave", "SBI SimplyClick", "Club Vistara SBI","Air India SBI Signature","SBI Elite","SBI Prime","SBI Cashback"],
      3: ["ICICI MakeMyTrip Bank", "Amazon Pay ICICI Bank", "ICICI Bank Coral","ICICI Bank Saphhiro","ICICI Rubyx"],
      4: ["HDFC Bank Millenia","HDFC Bank Regalia","Tata Neu HDFC Bank Infinity","HDFC Bank Gold","HDFC Bank MoneyBack","HDFC Bank MoneyBack Plus","Indian Oil HDFC Bank","Swiggy HDFC Bank","Marriot Bonvoy HDFC Bank"],
      5: ["IDFC First Bank Select","IDFC First Bank Wow","IDFC First Bank Classic","IDFC First Bank Wealth","IDFC First Bank Millenia","Club Vistara IDFC First Bank"],
      6: ["Myntra Kotak","Kotak League Platinum","Kotak Royale Premium"],
      7: ["IndusInd Bank Duo","IndusInd Bank Platinum Visa","IndusInd Bank Legend","IndusInd Bank Indulge"]
    };
  
    // Add new options to the second dropdown
    const options = cardOptions[bankValue] || [];
    options.forEach((option, index) => {
      const optionElement = document.createElement("option");
      optionElement.value = index + 1; // You can adjust the value as needed
      optionElement.textContent = option;
      cardId.appendChild(optionElement);
    });
  }</script>
